{
    "name": "Storyplate Blueprint",
    "description": "Blueprint for Storyplate",
    "instructions": "Do things.",
    "type": "app",
    "tags": ["Test"],
    "thumbnail": "logo.png",
    "authors": ["Jordan Sanborn <jordan@brit.co>"],
    "form": {
        "schema": {
            "type": "object",
            "title": "Storyplate",
            "properties": {
                "id": {
                    "title": "Ad ID",
                    "type": "string",
                    "required": true
                },
                "image": {
                    "title": "Hero URL",
                    "type": "string",
                    "required": true
                },
                "offset": {
                    "title": "Hero Offset (in %)",
                    "type": "number",
                    "default": 17
                },
                "logo": {
                    "title": "Logo URL",
                    "type": "string",
                    "required": false
                },
                "logocopy": {
                    "title": "Logo Copy",
                    "type": "string",
                    "required": false,
                    "dependencies": ["mobile_extra"]
                },
                "bannerlogo": {
                    "title": "Logo in Banner? (desktop)",
                    "type": "boolean",
                    "required": false,
                    "default": true,
                    "dependencies": ["mobile_extra"]
                },
                "logo_width": {
                    "title": "Logo Width (in em)",
                    "type": "number",
                    "required": false
                },
                "bg_color": {
                    "title": "Background Color",
                    "type": "color",
                    "required": true
                },
                "mobile_extra": {
                    "title": "Extra Options",
                    "type": "boolean"
                },
                "bg_opacity_mobile": {
                    "title": "Mobile BG Opacity",
                    "type": "string",
                    "required": false,
                    "dependencies": ["mobile_extra"]
                },
                "mobile_offset": {
                    "title": "Mobile Hero Offset (in %)",
                    "type": "number",
                    "required": false,
                    "dependencies": ["mobile_extra"]
                },
                "mobile_left_offset": {
                    "title": "Mobile Hero Left Offset (in %)",
                    "type": "number",
                    "default": 30,
                    "required": false,
                    "dependencies": ["mobile_extra"]
                },
                "mobile_scale": {
                    "title": "Mobile Hero Scale (in %)",
                    "type": "number",
                    "default": 150,
                    "dependencies": ["mobile_extra"]
                },
                "hp_offset": {
                    "title": "Homepage Hero Offset (in %)",
                    "type": "number",
                    "dependencies": ["mobile_extra"]
                },
                "anchor": {
                    "title": "Anchored to top?",
                    "type": "boolean",
                    "dependencies": ["mobile_extra"]
                },
                "experimental": {
                    "title": "Experimental Features",
                    "type": "boolean"
                },
                "fade_url": {
                    "title": "Fade to Image",
                    "type": "string",
                    "dependencies": ["experimental"]
                },
                "banner_color": {
                    "title": "Top Banner Color",
                    "type": "color",
                    "dependencies": ["mobile_extra"],
                    "default": "#ffffff"
                },
                "banner_cta_color": {
                    "title": "Top Banner CTA Color",
                    "type": "color",
                    "dependencies": ["mobile_extra"],
                    "default": "#ffffff"
                },
                "legal": {
                    "title": "Legal Copy",
                    "type": "string",
                    "dependencies": ["mobile_extra"],
                    "default": ""
                },
                "copy": {
                    "type": "array",
                    "title": "Copy",
                    "items": {
                        "type": "object",
                        "properties": {
                            "main": {
                                "title": "Main Copy",
                                "type": "string",
                                "required": true
                            },
                            "bold": {
                                "title": "Bold",
                                "type": "boolean"
                            },
                            "banner": {
                                "title": "Banner Copy",
                                "type": "string",
                                "required": false,
                                "default" : ""
                            },
                            "cta": {
                                "title": "CTA Copy",
                                "type": "string",
                                "required": true
                            },
                            "cta_color": {
                                "title": "CTA Color",
                                "type": "color",
                                "required": true
                            },
                            "secondary_cta": {
                                "title": "Secondary CTA?",
                                "type": "boolean"
                            },
                            "cta2": {
                                "title": "Secondary CTA Copy",
                                "type": "string",
                                "required": true,
                                "dependencies": ["secondary_cta"]
                            },
                            "cta2_color": {
                                "title": "Secondary CTA Color",
                                "type": "color",
                                "required": true,
                                "dependencies": ["secondary_cta"]
                            },
                            "dark": {
                                "title": "Dark Title Copy",
                                "type": "boolean"
                            },
                            "darkcta": {
                                "title": "Dark CTA Copy",
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        },
        "options": {
            "fields": {
                "offset": {
                    "type": "integer",
                    "maximum": 100,
                    "numericEntry": true
                }
            }
        }
    }
}
