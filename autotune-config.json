{
    "name": "Storyplate Blueprint",
    "description": "Blueprint for Storyplate",
    "instructions": "Do things.",
    "type": "app",
    "tags": ["Test"],
    "thumbnail": "logo.png",
    "authors": ["Jordan Sanborn <jordan@brit.co>"],
    "form": {
        "schema": {
            "type": "object",
            "title": "Storyplate",
            "properties": {
                "id": {
                    "title": "Ad ID",
                    "type": "string",
                    "required": true
                },
                "image": {
                    "title": "Hero URL",
                    "type": "string",
                    "required": true
                },
                "offset": {
                    "title": "Hero Offset (in %)",
                    "type": "number",
                    "default": 17
                },
                "logo": {
                    "title": "Logo URL",
                    "type": "string",
                    "required": false
                },
                "logo_width": {
                    "title": "Logo Width (in em)",
                    "type": "number",
                    "required": false
                },
                "bg_color": {
                    "title": "Background Color",
                    "type": "color",
                    "required": true
                },
                "extra_options": {
                    "title": "Extra Options",
                    "type": "boolean"
                },
                "mobile_sizing": {
                    "title": "Mobile BG Placement",
                    "type": "boolean",
                    "dependencies": ["extra_options"]
                },
                "bg_opacity_mobile": {
                    "title": "Mobile BG Opacity",
                    "type": "string",
                    "required": false,
                    "dependencies": ["mobile_sizing"]
                },
                "mobile_offset": {
                    "title": "Mobile Hero Offset (in %)",
                    "type": "number",
                    "required": false,
                    "dependencies": ["mobile_sizing"]
                },
                "mobile_left_offset": {
                    "title": "Mobile Hero Left Offset (in %)",
                    "type": "number",
                    "default": 30,
                    "required": false,
                    "dependencies": ["mobile_sizing"]
                },
                "mobile_scale": {
                    "title": "Mobile Hero Scale (in %)",
                    "type": "number",
                    "default": 150,
                    "dependencies": ["mobile_sizing"]
                },
                "logo_options": {
                    "title": "Logo Options",
                    "type": "boolean",
                    "dependencies": ["extra_options"]
                },
                "logocopy": {
                    "title": "Logo Copy",
                    "type": "string",
                    "required": false,
                    "dependencies": ["logo_options"]
                },
                "general_placement": {
                    "title": "General BG Options",
                    "type": "boolean",
                    "dependencies": ["extra_options"]
                },
                "hp_offset": {
                    "title": "Homepage Hero Offset (in %)",
                    "type": "number",
                    "dependencies": ["general_placement"]
                },
                "anchor": {
                    "title": "Anchored to top?",
                    "type": "boolean",
                    "dependencies": ["general_placement"]
                },
                "fixed_bg": {
                    "title": "Fixed Background Ratio",
                    "type": "boolean",
                    "dependencies": ["general_placement"]
                },
                "bg_ratio_desktop": {
                    "title": "Desktop Aspect Ratio (height divided by width)",
                    "type": "number",
                    "dependencies": ["fixed_bg"],
                    "required": true
                },
                "bg_ratio_mobile": {
                    "title": "Mobile Aspect Ratio",
                    "type": "number",
                    "dependencies": ["fixed_bg"],
                    "required": true
                },
                "general_copy": {
                    "title": "General Copy Options",
                    "type": "boolean",
                    "dependencies": ["extra_options"]
                },
                "hide_overlay": {
                    "title": "Hide Overlay (box with words in it)",
                    "type": "boolean",
                    "dependencies": ["general_copy"]
                },
                "experimental": {
                    "title": "Experimental Features",
                    "type": "boolean",
                    "dependencies": ["extra_options"]
                },
                "fade_url": {
                    "title": "Fade to Image",
                    "type": "string",
                    "dependencies": ["experimental"]
                },
                "banner_options": {
                    "title": "Banner Options",
                    "type": "boolean",
                    "dependencies": ["extra_options"]
                },
                "banner_color": {
                    "title": "Top Banner Color",
                    "type": "color",
                    "dependencies": ["banner_options"],
                    "default": "#ffffff"
                },
                "banner_cta_color": {
                    "title": "Top Banner CTA Color",
                    "type": "color",
                    "dependencies": ["banner_options"],
                    "default": "#ffffff"
                },
                "bannerlogo": {
                    "title": "Logo in Banner? (desktop)",
                    "type": "boolean",
                    "required": false,
                    "default": true,
                    "dependencies": ["banner_options"]
                },
                "legal_options": {
                    "title": "Legal",
                    "type": "boolean",
                    "dependencies": ["extra_options"]
                },
                "legal": {
                    "title": "Legal Copy",
                    "type": "string",
                    "dependencies": ["legal_options"],
                    "default": ""
                },
                "legal_size": {
                    "title": "Legal Copy Font Size (in em)",
                    "type": "string",
                    "dependencies": ["legal_options"],
                    "default": "0.4"
                },
                "copy": {
                    "type": "array",
                    "title": "Copy",
                    "items": {
                        "type": "object",
                        "properties": {
                            "main": {
                                "title": "Main Copy",
                                "type": "string",
                                "required": true
                            },
                            "bold": {
                                "title": "Bold",
                                "type": "boolean"
                            },
                            "banner": {
                                "title": "Banner Copy",
                                "type": "string",
                                "required": false,
                                "default" : ""
                            },
                            "cta": {
                                "title": "CTA Copy",
                                "type": "string",
                                "required": true
                            },
                            "cta_color": {
                                "title": "CTA Color",
                                "type": "color",
                                "required": true
                            },
                            "secondary_cta": {
                                "title": "Secondary CTA?",
                                "type": "boolean"
                            },
                            "cta2": {
                                "title": "Secondary CTA Copy",
                                "type": "string",
                                "required": true,
                                "dependencies": ["secondary_cta"]
                            },
                            "cta2_color": {
                                "title": "Secondary CTA Color",
                                "type": "color",
                                "required": true,
                                "dependencies": ["secondary_cta"]
                            },
                            "dark": {
                                "title": "Dark Title Copy",
                                "type": "boolean"
                            },
                            "darkcta": {
                                "title": "Dark CTA Copy",
                                "type": "boolean"
                            }
                        }
                    }
                },
                "floating_element": {
                    "type": "array",
                    "title": "Floating Element",
                    "items": {
                        "type": "object",
                        "properties": {
                            "background": {
                                "title": "Placement",
                                "type": "boolean",
                                "enum": [true, false],
                                "default": true
                            },
                            "position": {
                                "title": "Position",
                                "type": "number",
                                "enum": [1,2,3,4,5],
                                "default": 1
                            },
                            "image": {
                                "title": "Type",
                                "type": "boolean",
                                "enum": [false, true],
                                "default": false
                            },
                            "vertical": {
                                "title": "Vertical (in %)",
                                "type": "number",
                                "default": 0
                            },
                            "horizontal": {
                                "title": "Horizontal (in %)",
                                "type": "number",
                                "default": 0
                            },
                            "copy": {
                                "title": "Copy",
                                "type": "string",
                                "required": true
                            },
                            "color": {
                                "title": "Color",
                                "type": "color",
                                "default": "#525252"
                            },
                            "size": {
                                "title": "Size (in em)",
                                "type": "number",
                                "default": 1
                            },
                            "url": {
                                "title": "Image URL",
                                "type": "string",
                                "required": true
                            }
                        },
                        "dependencies": {
                            "vertical": ["position"],
                            "horizontal": ["position"],
                            "copy": ["image"],
                            "color": ["image"],
                            "url": ["image"]
                        }
                    }
                }
            }
        },
        "options": {
            "fields": {
                "offset": {
                    "type": "integer",
                    "maximum": 100,
                    "numericEntry": true
                },
                "floating_element": {
                    "items": {
                        "fields": {
                            "position": {
                                "type": "select",
                                "optionLabels": ["Top Left", "Bottom Left", "Top Right", "Bottom Right", "Custom"]
                            },
                            "background": {
                                "type": "select",
                                "optionLabels": ["Background", "Overlay"]
                            },
                            "image": {
                                "type": "select",
                                "optionLabels": ["Text", "Image"]
                            },
                            "vertical": {
                                "dependencies": {
                                    "position": 5
                                }
                            },
                            "horizontal": {
                                "dependencies": {
                                    "position": 5
                                }
                            },
                            "copy": {
                                "dependencies": {
                                    "image": false
                                }
                            },
                            "color": {
                                "dependencies": {
                                    "image": false
                                }
                            },
                            "url": {
                                "dependencies": {
                                    "image": true
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
