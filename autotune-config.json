{
    "name": "Storyplate Blueprint",
    "description": "Blueprint for Storyplate",
    "instructions": "Do things.",
    "type": "app",
    "tags": ["Test"],
    "thumbnail": "logo.png",
    "authors": ["Jordan Sanborn <jordan@brit.co>"],
    "form": {
        "schema": {
            "type": "object",
            "title": "Storyplate",
            "properties": {
                "ID": {
                    "title": "Ad ID",
                    "type": "string",
                    "required": true
                },
                "image": {
                    "title": "Hero URL",
                    "type": "string",
                    "required": true
                },
                "offset": {
                    "title": "Hero Offset (in %)",
                    "type": "number"
                },
                "logo": {
                    "title": "Logo URL",
                    "type": "string",
                    "required": false
                },
                "bg_color": {
                    "title": "Background Color",
                    "type": "color",
                    "required": true
                },
                "bg_opacity_mobile": {
                    "title": "Mobile BG Opacity",
                    "type": "string",
                    "required": false
                },
                "secondary_cta": {
                    "title": "Secondary CTA?",
                    "type": "boolean"
                },
                "copy": {
                    "type": "array",
                    "title": "Copy",
                    "items": {
                        "type": "object",
                        "properties": {
                            "main": {
                                "title": "Main Copy",
                                "type": "string",
                                "required": true
                            },
                            "cta": {
                                "title": "CTA Copy",
                                "type": "string",
                                "required": true
                            },
                            "cta_color": {
                                "title": "CTA Color",
                                "type": "color",
                                "required": true
                            },
                            "cta2": {
                                "title": "Secondary CTA Copy",
                                "type": "string",
                                "required": true
                            },
                            "cta2_color": {
                                "title": "Secondary CTA Color",
                                "type": "color",
                                "required": true
                            }
                        }
                    },
                    "dependencies": {
                        "cta2": ["secondary_cta"],
                        "cta2_color": ["secondary_cta"]
                    }
                }
            }
        },
        "options": {
            "fields": {
                "offset": {
                    "type": "integer",
                    "maximum": 100,
                    "numericEntry": true
                }
            }
        }
    }
}
